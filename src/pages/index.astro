---
import Layout from "../layouts/Layout.astro";
import ArticleList from "../components/article/article-list";
import CartContent from "../components/cart/cart-content";

const response = await fetch("http://localhost:3004/articles");
const articles = await response.json();
---

<Layout title="Welcome to Astro.">
  <main class="container py-16 space-y-6">
    <h1 class="text-4xl font-bold">Shop</h1>
    <div class="flex flex-col md:flex-row gap-16">
      <div class="space-y-4 flex-1">
        <ArticleList articles={articles} client:load />
      </div>
      <aside class="basis-48">
        <CartContent client:load />
      </aside>
    </div>
  </main>
</Layout>
